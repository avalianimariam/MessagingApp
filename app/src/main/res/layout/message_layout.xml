<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:background="@drawable/reciever_bg"
        android:padding="10dp"
        android:text="receiver messages here"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/txt_sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/txt_receiver_message_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/sender_bg"
        android:padding="10dp"
        android:text="Sender messages here"
        android:textColor="@color/white"
        android:textSize="14sp" />


</RelativeLayout>